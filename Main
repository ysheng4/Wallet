<script>
var i=0;
var j=0;
function myFunction(){
if(t1.value==""||t2.value=="")
{
	alert("Input Item or Amount!");
}else if(s1.value==""||s2.value==""){
	alert("Select month or day!");
}else if((s1.value==2&&s2.value==31)||(s1.value==2&&s2.value==30)||(s1.value==4&&s2.value==31)||(s1.value==6&&s2.value==31)||(s1.value==9&&s2.value==31)||(s1.value==11&&s2.value==31)){
    alert("Month or day is wrong!");
}else {
    i++;
	R=incometable.insertRow();
	C=R.insertCell();
	C.innerHTML=document.getElementById("s1").value+"/"+document.getElementById("s2").value+"/"+document.getElementById("s3").value;
	C=R.insertCell();
	C.innerHTML=document.getElementById("t1").value;
	C=R.insertCell();
	C.innerHTML=document.getElementById("t2").value;
	C=R.insertCell();
	C.innerHTML="<input type='button' value='delete' onclick='deleteRow(this)'>";
	
	//document.getElementById("incometable").rows[i].cells[0].innerText=document.getElementById("t1").value;
	//document.getElementById("incometable").rows[i].cells[1].innerText=document.getElementById("t2").value;
	}
}

function myFunction1(){
if(t3.value==""||t4.value=="")
{
	alert("Input Item or Amount!");
}else if(s4.value==""||s5.value==""){
	alert("Select month or day!");
}else if((s4.value==2&&s5.value==31)||(s4.value==2&&s5.value==30)||(s4.value==4&&s5.value==31)||(s4.value==6&&s5.value==31)||(s4.value==9&&s5.value==31)||(s4.value==11&&s5.value==31)){
		alert("Month or day is wrong!");

}else{
    j++;
	A=incometable1.insertRow();
	B=A.insertCell();
	B.innerHTML=document.getElementById("s4").value+"/"+document.getElementById("s5").value+"/"+document.getElementById("s6").value;
	B=A.insertCell();
	B.innerHTML=document.getElementById("t3").value;
	B=A.insertCell();
	B.innerHTML=document.getElementById("t4").value;
	B=A.insertCell();
	B.innerHTML="<input type='button' value='delete' onclick='deleteRow1(this)'>";
	
	//document.getElementById("incometable").rows[i].cells[0].innerText=document.getElementById("t1").value;
	//document.getElementById("incometable").rows[i].cells[1].innerText=document.getElementById("t2").value;
	}
}
var aa
var k
var p=0
var m
var u=1
var sum1=0
var sum2=0
var sum3=0
var s
var t



function myFunction2() {

if(s7.value==""){
 alert("Select month !");
}else{
sum3=0;
document.getElementById("t5").value=sum3;
var ee=document.getElementById("incometable2").rows.length;
for(t=ee-1;t>0;t--){
document.getElementById("incometable2").deleteRow(t);
}

sum1=0;
sum2=0;

var bb=s7.value;

for(k=0;k<i;k++){
sum3=0
 var pp=document.getElementById("incometable").rows[k+1].cells[0].innerHTML.indexOf(bb);
	if(pp==0){
	p++;
	I=incometable2.insertRow();
	L=I.insertCell();
	L.innerHTML=document.getElementById("incometable").rows[k+1].cells[0].innerText;
	L=I.insertCell();
	L.innerHTML=document.getElementById("incometable").rows[k+1].cells[1].innerText;
	L=I.insertCell();
	L.innerHTML=document.getElementById("incometable").rows[k+1].cells[2].innerText;
	L=I.insertCell();
	L.innerHTML="Consume";
	
}
}
var y=document.getElementById("incometable2").rows.length;
for(m=0;m<j;m++){
var oo=document.getElementById("incometable1").rows[m+1].cells[0].innerHTML.indexOf(bb);
	if(oo==0){
	p++;
	I=incometable2.insertRow();
	L=I.insertCell();
	L.innerHTML=document.getElementById("incometable1").rows[m+1].cells[0].innerText;
	L=I.insertCell();
	L.innerHTML=document.getElementById("incometable1").rows[m+1].cells[1].innerText;
	L=I.insertCell();
	L.innerHTML=document.getElementById("incometable1").rows[m+1].cells[2].innerText;
	L=I.insertCell();
	L.innerHTML="Income";
	
}
u++;
}
var row=document.getElementById("incometable2").rows.length;
for(s=1;s<row;s++){
	if(document.getElementById("incometable2").rows[s].cells[3].innerHTML=="Consume"){
		sum1=sum1+Number(document.getElementById("incometable2").rows[s].cells[2].innerHTML);
		}else{
		sum2=sum2+Number(document.getElementById("incometable2").rows[s].cells[2].innerHTML);
		}
	
}
sum3=sum2-sum1;
document.getElementById("t5").value=Number(sum3);
}
}
function deleteRow(obj){
  alert("Do you want to delete this item");
  incometable.deleteRow(obj.parentElement.parentElement.rowIndex);
 }
 
 function deleteRow1(obj){
  alert("Do you want to delete this item");
  incometable1.deleteRow(obj.parentElement.parentElement.rowIndex);
 }
